<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transcationWhite"
        android:fitsSystemWindows="true">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo_app" />

        <RelativeLayout
            android:id="@+id/layoutInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center">


            <EditText
                android:visibility="gone"
                android:id="@+id/edtAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dp_10"
                android:inputType="text"
                android:paddingStart="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10"
                android:textSize="@dimen/sp_18"
                tools:ignore="RtlSymmetry" />

            <EditText
                android:visibility="gone"
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtAccount"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_30"
                android:inputType="textPassword"
                android:paddingStart="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10"
                android:textSize="@dimen/sp_18"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tvAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_35"
                android:layout_marginLeft="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_5"
                android:text="@string/account"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tvPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtAccount"
                android:layout_marginStart="@dimen/dp_35"
                android:layout_marginLeft="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_5"
                android:text="@string/password"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />


        </RelativeLayout>

        <ImageView
            android:visibility="gone"
            android:id="@+id/imgLoginFB"
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_80"
            android:layout_below="@+id/layoutInput"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_30"
            android:src="@drawable/login_fb" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/imgLoginGG"
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_80"
            android:layout_below="@+id/imgLoginFB"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@drawable/login_gg" />

    </RelativeLayout>

</RelativeLayout>