<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_above="@+id/layoutInput"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo_app" />

        <RelativeLayout
            android:id="@+id/layoutInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center">

            <TextView
                android:id="@+id/tvAccount"
                android:layout_width="@dimen/dp_100"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/account"
                android:textColor="@color/colorPurple"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:id="@+id/tvPassword"
                android:layout_width="@dimen/dp_100"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtAccount"
                android:layout_toStartOf="@+id/edtPassword"
                android:layout_toLeftOf="@+id/edtPassword"
                android:gravity="right"
                android:text="@string/password"
                android:textColor="@color/colorPurple"
                android:textSize="@dimen/sp_18" />

            <EditText
                android:paddingLeft="@dimen/dp_10"
                android:id="@+id/edtAccount"
                android:layout_width="@dimen/dp_200"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_toEndOf="@+id/tvAccount"
                android:layout_toRightOf="@+id/tvAccount"
                android:background="@drawable/bg_edt"
                android:textSize="@dimen/sp_18" />

            <EditText
                android:paddingLeft="@dimen/dp_10"
                android:id="@+id/edtPassword"
                android:layout_width="@dimen/dp_200"
                android:layout_height="@dimen/dp_30"
                android:layout_below="@+id/edtAccount"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toEndOf="@+id/tvAccount"
                android:layout_toRightOf="@+id/tvAccount"
                android:background="@drawable/bg_edt"
                android:textSize="@dimen/sp_18" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/imgLoginFB"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_30"
            android:src="@drawable/login_fb"
            android:layout_below="@+id/layoutInput"
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_80"/>
        <ImageView
            android:id="@+id/imgLoginGG"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@drawable/login_gg"
            android:layout_below="@+id/imgLoginFB"
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_80"/>

    </RelativeLayout>

</RelativeLayout>