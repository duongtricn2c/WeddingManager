<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="InefficientWeight,UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:gravity="center"
                android:text="@string/menu_diary_wedding"
                android:textColor="@color/colorPurple"
                android:textSize="@dimen/sp_30"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:text="@string/name_party"
                android:textSize="@dimen/sp_18" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:background="@drawable/bg_edt"
                android:inputType="text"
                android:importantForAutofill="no"
                tools:ignore="LabelFor"
                android:layout_marginBottom="@dimen/dp_15"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:text="@string/type_party"
                android:textSize="@dimen/sp_18" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_15"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:text="@string/status"
                android:textSize="@dimen/sp_18" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_15"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:text="@string/party_date_start"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:textAlignment="center"
                android:text="20/11/2019"
                android:id="@+id/tvDateChoose"
                android:textStyle="bold"
                android:textSize="@dimen/sp_20"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:text="@string/cost"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:textAlignment="center"
                android:text="400.000 Ä‘"
                android:id="@+id/tvCostParty"
                android:textStyle="bold"
                android:textSize="@dimen/sp_20"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:text="@string/cost_type"
                android:textSize="@dimen/sp_18" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_15"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:text="@string/owner_party"
                android:textSize="@dimen/sp_18" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:background="@drawable/bg_edt"
                android:inputType="text"
                android:importantForAutofill="no"
                tools:ignore="LabelFor"
                android:layout_marginBottom="@dimen/dp_15"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:text="@string/note_party"
                android:textSize="@dimen/sp_18" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:background="@drawable/bg_edt"
                android:inputType="text"
                android:importantForAutofill="no"
                tools:ignore="LabelFor"
                android:layout_marginBottom="@dimen/dp_100"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:background="@color/colorPurple"
            android:text="ADD"
            android:id="@+id/btnAddParty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_10"
            android:layout_weight="1"
            tools:ignore="ButtonStyle" />

        <Button
            android:background="@color/colorMoneyLow"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:text="Cancel"
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_10"
            android:layout_weight="1"
            tools:ignore="ButtonStyle" />

    </LinearLayout>

</RelativeLayout>